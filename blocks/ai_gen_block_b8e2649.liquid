{% doc %}
  @prompt
    image gallery
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gallery-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-gallery-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-gallery-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-gallery-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-gallery-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_radius }}px;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    cursor: pointer;
  }

  .ai-gallery-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-gallery-item-{{ ai_gen_id }}:hover img {
    transform: scale(1.05);
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-gallery-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-gallery-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-gallery-item-{{ ai_gen_id }}:hover .ai-gallery-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-gallery-caption-{{ ai_gen_id }} {
    color: {{ block.settings.caption_color }};
    font-size: {{ block.settings.caption_size }}px;
    text-align: center;
    padding: 0 20px;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-gallery-item-{{ ai_gen_id }}:hover .ai-gallery-caption-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-gallery-lightbox-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .ai-gallery-lightbox-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-gallery-lightbox-content-{{ ai_gen_id }} {
    position: relative;
    max-width: 90%;
    max-height: 90%;
  }

  .ai-gallery-lightbox-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
  }

  .ai-gallery-lightbox-close-{{ ai_gen_id }} {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: white;
    font-size: 32px;
    cursor: pointer;
    padding: 10px;
    line-height: 1;
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    font-size: 32px;
    cursor: pointer;
    padding: 20px;
    border-radius: 4px;
  }

  .ai-gallery-lightbox-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-gallery-lightbox-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-gallery-lightbox-caption-{{ ai_gen_id }} {
    position: absolute;
    bottom: -40px;
    left: 0;
    right: 0;
    color: white;
    text-align: center;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-gallery-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-gallery-lightbox-nav-{{ ai_gen_id }} {
      padding: 15px;
      font-size: 24px;
    }

    .ai-gallery-lightbox-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-gallery-lightbox-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<image-gallery-{{ ai_gen_id }} class="ai-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gallery-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-gallery-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-gallery-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign caption_key = 'caption_' | append: i
          assign image = block.settings[image_key]
          assign caption = block.settings[caption_key]
        %}

        {% if image != blank %}
          <div class="ai-gallery-item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
            >
            {% if block.settings.show_overlay %}
              <div class="ai-gallery-overlay-{{ ai_gen_id }}">
                {% if caption != blank %}
                  <div class="ai-gallery-caption-{{ ai_gen_id }}">{{ caption }}</div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      {% if block.settings.image_1 == blank and block.settings.image_2 == blank and block.settings.image_3 == blank %}
        {% for i in (1..6) %}
          <div class="ai-gallery-item-{{ ai_gen_id }}">
            <div class="ai-gallery-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              {% if forloop.first %}
                <div class="ai-gallery-empty-state-{{ ai_gen_id }}">
                  Next, add images to your gallery
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>

  {% if block.settings.enable_lightbox %}
    <div class="ai-gallery-lightbox-{{ ai_gen_id }}">
      <div class="ai-gallery-lightbox-content-{{ ai_gen_id }}">
        <button class="ai-gallery-lightbox-close-{{ ai_gen_id }}" aria-label="Close lightbox">&times;</button>
        <button class="ai-gallery-lightbox-nav-{{ ai_gen_id }} ai-gallery-lightbox-prev-{{ ai_gen_id }}" aria-label="Previous image">&lsaquo;</button>
        <img class="ai-gallery-lightbox-image-{{ ai_gen_id }}" src="" alt="">
        <div class="ai-gallery-lightbox-caption-{{ ai_gen_id }}"></div>
        <button class="ai-gallery-lightbox-nav-{{ ai_gen_id }} ai-gallery-lightbox-next-{{ ai_gen_id }}" aria-label="Next image">&rsaquo;</button>
      </div>
    </div>
  {% endif %}
</image-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.images = [];
        this.currentIndex = 0;
      }

      connectedCallback() {
        this.collectImages();
        this.setupGalleryItems();
        
        {% if block.settings.enable_lightbox %}
          this.setupLightbox();
        {% endif %}
      }

      collectImages() {
        {% for i in (1..12) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign caption_key = 'caption_' | append: i
            assign image = block.settings[image_key]
            assign caption = block.settings[caption_key]
          %}
          {% if image != blank %}
            this.images.push({
              src: '{{ image | image_url: width: 2000 }}',
              alt: '{{ image.alt | escape }}',
              caption: '{{ caption | escape }}'
            });
          {% endif %}
        {% endfor %}
      }

      setupGalleryItems() {
        const items = this.querySelectorAll('.ai-gallery-item-{{ ai_gen_id }}');
        items.forEach((item, index) => {
          item.addEventListener('click', () => {
            {% if block.settings.enable_lightbox %}
              this.openLightbox(index);
            {% endif %}
          });
        });
      }

      setupLightbox() {
        this.lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        this.lightboxImage = this.querySelector('.ai-gallery-lightbox-image-{{ ai_gen_id }}');
        this.lightboxCaption = this.querySelector('.ai-gallery-lightbox-caption-{{ ai_gen_id }}');
        this.closeBtn = this.querySelector('.ai-gallery-lightbox-close-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-gallery-lightbox-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-gallery-lightbox-next-{{ ai_gen_id }}');

        this.closeBtn.addEventListener('click', () => this.closeLightbox());
        this.prevBtn.addEventListener('click', () => this.showPrevious());
        this.nextBtn.addEventListener('click', () => this.showNext());

        this.lightbox.addEventListener('click', (e) => {
          if (e.target === this.lightbox) {
            this.closeLightbox();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (!this.lightbox.classList.contains('active')) return;
          
          if (e.key === 'Escape') this.closeLightbox();
          if (e.key === 'ArrowLeft') this.showPrevious();
          if (e.key === 'ArrowRight') this.showNext();
        });
      }

      openLightbox(index) {
        this.currentIndex = index;
        this.updateLightboxImage();
        this.lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeLightbox() {
        this.lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }

      showPrevious() {
        this.currentIndex = (this.currentIndex - 1 + this.images.length) % this.images.length;
        this.updateLightboxImage();
      }

      showNext() {
        this.currentIndex = (this.currentIndex + 1) % this.images.length;
        this.updateLightboxImage();
      }

      updateLightboxImage() {
        const image = this.images[this.currentIndex];
        this.lightboxImage.src = image.src;
        this.lightboxImage.alt = image.alt;
        this.lightboxCaption.textContent = image.caption;
      }
    }

    customElements.define('image-gallery-{{ ai_gen_id }}', ImageGallery{{ ai_gen_id }});
  })();
</script>

