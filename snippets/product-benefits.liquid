{% comment %}
  Enhanced Product Benefits
  Highlights key product features and benefits
{% endcomment %}

<div class="product-benefits" {{ block.shopify_attributes }}>
  <style>
    .product-benefits {
      margin: 2rem 0;
    }
    
    .benefits-header {
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .benefits-header h3 {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: rgb(var(--color-foreground));
    }
    
    .benefits-header p {
      font-size: 1.125rem;
      color: rgba(var(--color-foreground), 0.7);
    }
    
    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }
    
    .benefit-card {
      background: linear-gradient(135deg, rgba(var(--color-background), 0.5), rgba(var(--color-foreground), 0.02));
      border: 1px solid rgba(var(--color-border), 0.2);
      border-radius: 1rem;
      padding: 2rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .benefit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: rgb(var(--color-button));
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.3s ease;
    }
    
    .benefit-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(var(--color-shadow), 0.15);
    }
    
    .benefit-card:hover::before {
      transform: scaleX(1);
    }
    
    .benefit-icon {
      width: 60px;
      height: 60px;
      background: rgb(var(--color-button));
      border-radius: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 6px rgba(var(--color-button), 0.2);
    }
    
    .benefit-icon svg {
      width: 32px;
      height: 32px;
      color: rgb(var(--color-button-label));
    }
    
    .benefit-content h4 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
      color: rgb(var(--color-foreground));
    }
    
    .benefit-content p {
      font-size: 0.938rem;
      line-height: 1.6;
      color: rgba(var(--color-foreground), 0.7);
      margin: 0;
    }
    
    @media screen and (max-width: 749px) {
      .benefits-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .benefit-card {
        padding: 1.5rem;
      }
      
      .benefits-header h3 {
        font-size: 1.5rem;
      }
    }
  </style>
  
