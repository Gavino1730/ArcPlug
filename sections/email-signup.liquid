<style>
  .email-signup {
    padding: 14px 1.6rem 14px 1.6rem;
    text-align: center;
  }

  .email-signup__wrapper {
    max-width: 860px;
    margin: 0 auto;
  }

  .email-signup__heading {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0 0 0.65rem 0;
    color: rgba(var(--color-foreground), 0.9);
    border-bottom: 1px solid rgba(var(--color-foreground), 0.15);
    padding-bottom: 12px;
  }

  .email-signup__description {
    font-size: 1rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0 0 0.8rem 0;
  }

  .email-signup__form {
    display: flex;
    gap: 0.6rem;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: stretch;
  }

  .email-signup__input {
    flex: 1;
    min-width: 460px;
    max-width: 640px;
    min-height: 5.2rem;
    padding: 1rem 1.25rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: var(--inputs-radius, 0);
    font-size: 1rem;
    font-family: inherit;
  }

  .email-signup__input:focus {
    outline: none;
    border-color: rgba(var(--color-foreground), 0.5);
  }

  .email-signup__button {
    min-height: 5.2rem;
    padding: 1rem 2.3rem;
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: none;
    border-radius: var(--buttons-radius, 0);
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
  }

  .email-signup__button:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 749px) {
    .email-signup {
      padding: 10px 1rem 12px;
    }

    .email-signup__heading {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      padding-bottom: 10px;
    }

    .email-signup__description {
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .email-signup__form {
      flex-direction: column;
      gap: 0.5rem;
    }

    .email-signup__input {
      width: 100%;
      margin: 0 auto;
      padding: 0.75rem 0.75rem;
      font-size: 0.95rem;
      min-height: 4.6rem;
      min-width: 0;
    }

    .email-signup__button {
      width: 100%;
      margin: 0 auto;
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
      min-height: 4.6rem;
    }
  }
</style>

<div class="email-signup color-{{ section.settings.color_scheme }} gradient">
  <div class="email-signup__wrapper">
    <h2 class="email-signup__heading">{{ section.settings.heading }}</h2>
    {% if section.settings.description != blank %}
      <p class="email-signup__description">{{ section.settings.description }}</p>
    {% endif %}
    <form class="email-signup__form" method="post" action="/contact#newsletter-form">
      <input
        type="email"
        class="email-signup__input"
        placeholder="Enter your email"
        name="contact[email]"
        required
      >
      <button type="submit" class="email-signup__button">{{ section.settings.button_text }}</button>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "Email Signup",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay Updated"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Subscribe to get special offers and new product launches"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Email Signup"
    }
  ]
}
{% endschema %}
