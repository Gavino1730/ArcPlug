{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .trust-badges__wrapper {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    align-items: start;
  }

  .trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
  }

  .trust-badge__icon {
    width: 4.4rem;
    height: 4.4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
  }

  .trust-badge__title {
    font-weight: 600;
    font-size: 1.05rem;
    color: rgba(var(--color-foreground), 0.9);
    margin: 0;
    line-height: 1.2;
  }

  .trust-badge__description {
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .trust-badges__wrapper {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-badge__icon {
      width: 3.4rem;
      height: 3.4rem;
      font-size: 1.9rem;
    }

    .trust-badge__title {
      font-size: 0.9rem;
    }
  }
{%- endstyle -%}

<div class="trust-badges color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="trust-badges__wrapper">
    {% for block in section.blocks %}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        <div class="trust-badge__icon">
          {% case block.settings.icon %}
            {% when 'truck' %}
              ‚úàÔ∏è
            {% when 'shield' %}
              ‚úì
            {% when 'refresh' %}
              ‚Üª
            {% when 'lock' %}
              üîí
            {% else %}
              ‚úì
          {% endcase %}
        </div>
        <h3 class="trust-badge__title">{{ block.settings.title }}</h3>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "trust_badge",
      "name": "Badge",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Badge Title"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "truck",
              "label": "Fast Shipping"
            },
            {
              "value": "shield",
              "label": "Weather Tested"
            },
            {
              "value": "refresh",
              "label": "Free Returns"
            },
            {
              "value": "lock",
              "label": "Secure Checkout"
            }
          ],
          "default": "truck"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        {
          "type": "trust_badge",
          "settings": {
            "title": "Free Shipping Always",
            "icon": "truck"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "Weather Tested Gear",
            "icon": "shield"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "14‚ÄëDay Returns",
            "icon": "refresh"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "Secure Payments",
            "icon": "lock"
          }
        }
      ]
    }
  ]
}
{% endschema %}
