{% comment %}
  Value Propositions / Benefits Section
  Displays key selling points with icons and compelling copy
{% endcomment %}

<div class="value-props color-{{ section.settings.color_scheme }} gradient">
  <div class="value-props__wrapper page-width">
    {%- if section.settings.heading != blank -%}
      <div class="value-props__header">
        <h2 class="value-props__heading h1">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="value-props__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="value-props__grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
        {%- for block in section.blocks -%}
          <div class="value-props__item" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <div class="value-props__icon">
                {{ block.settings.icon }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.heading != blank -%}
              <h3 class="value-props__item-heading h3">{{ block.settings.heading }}</h3>
            {%- endif -%}
            
            {%- if block.settings.text != blank -%}
              <div class="value-props__item-text">{{ block.settings.text }}</div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_cta -%}
      <div class="value-props__cta">
        <a href="{{ section.settings.cta_link }}" class="button button--primary button--large">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .value-props {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .value-props__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .value-props__heading {
    margin-bottom: 16px;
  }

  .value-props__subheading {
    font-size: 1.125rem;
    opacity: 0.85;
    max-width: 700px;
    margin: 0 auto;
  }

  .value-props__grid {
    gap: 32px;
    margin-bottom: 48px;
  }

  .value-props__item {
    text-align: center;
    padding: 32px 24px;
    background: rgba(var(--color-foreground), 0.03);
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .value-props__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(var(--color-shadow), 0.12);
  }

  .value-props__icon {
    font-size: 3rem;
    margin-bottom: 20px;
    line-height: 1;
  }

  .value-props__item-heading {
    margin-bottom: 12px;
    font-weight: 700;
  }

  .value-props__item-text {
    font-size: 0.9375rem;
    line-height: 1.6;
    opacity: 0.85;
  }

  .value-props__cta {
    text-align: center;
  }

  .button--large {
    padding: 16px 48px;
    font-size: 1.125rem;
  }

  @media screen and (max-width: 749px) {
    .value-props {
      padding: {{ section.settings.padding_top | divided_by: 1.5 }}px 0 {{ section.settings.padding_bottom | divided_by: 1.5 }}px;
    }

    .value-props__header {
      margin-bottom: 32px;
    }

    .value-props__grid {
      gap: 20px;
      margin-bottom: 32px;
    }

    .value-props__item {
      padding: 24px 20px;
    }

    .value-props__icon {
      font-size: 2.5rem;
      margin-bottom: 16px;
    }
  }
</style>

