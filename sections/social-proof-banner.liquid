{% comment %}
  Social Proof Banner - Creates urgency and trust
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .social-proof-banner {
    text-align: center;
  }

  .social-proof-banner__content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1.75rem;
  }

  .social-proof-stat {
    flex: 1;
    min-width: 160px;
  }

  .social-proof-stat__number {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.25rem 0;
    line-height: 1;
    color: rgb(var(--color-foreground));
  }

  .social-proof-stat__label {
    font-size: 1rem;
    margin: 0;
    font-weight: 600;
    line-height: 1.2;
    color: rgba(var(--color-foreground), 0.78);
  }

  .social-proof-banner__divider {
    width: 1px;
    height: 46px;
    background: rgba(var(--color-foreground), 0.18);
  }

  @media screen and (max-width: 749px) {
    .social-proof-banner__content {
      gap: 1.2rem;
    }

    .social-proof-stat {
      min-width: 140px;
    }

    .social-proof-stat__number {
      font-size: 1.7rem;
    }

    .social-proof-stat__label {
      font-size: 0.95rem;
    }

    .social-proof-banner__divider {
      display: none;
    }
  }
{%- endstyle -%}

<div class="social-proof-banner color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="social-proof-banner__content">
      {% for block in section.blocks %}
        {% if forloop.index > 1 %}
          <div class="social-proof-banner__divider" aria-hidden="true"></div>
        {% endif %}
        <div class="social-proof-stat" {{ block.shopify_attributes }}>
          <p class="social-proof-stat__number">{{ block.settings.number }}</p>
          <p class="social-proof-stat__label">{{ block.settings.label }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Social Proof Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "117+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Customers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Proof Banner",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "number": "117+",
            "label": "Happy Customers"
          }
        },
        {
