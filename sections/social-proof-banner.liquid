{% comment %}
  Social Proof Banner - Creates urgency and trust
{% endcomment %}

<style>
  .social-proof-banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: {{ section.settings.padding_top }}px 1.5rem {{ section.settings.padding_bottom }}px 1.5rem;
    text-align: center;
  }

  .social-proof-banner__content {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 3rem;
  }

  .social-proof-stat {
    flex: 1;
    min-width: 180px;
    padding: 0 0.5rem;
  }

  .social-proof-stat__number {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.4rem 0;
    line-height: 1;
  }

  .social-proof-stat__label {
    font-size: 1.05rem;
    margin: 0;
    opacity: 0.95;
    font-weight: 600;
  }

  .social-proof-banner__divider {
    width: 1px;
    height: 50px;
    background: rgba(255, 255, 255, 0.3);
  }

  @media screen and (max-width: 749px) {
    .social-proof-banner__content {
      gap: 2rem;
    }

    .social-proof-stat {
      min-width: 140px;
    }

    .social-proof-stat__number {
      font-size: 2rem;
    }

    .social-proof-stat__label {
      font-size: 0.95rem;
    }

    .social-proof-banner__divider {
      display: none;
    }
  }
</style>

<div class="social-proof-banner">
  <div class="social-proof-banner__content">
    {% for block in section.blocks %}
      {% if forloop.index > 1 %}
        <div class="social-proof-banner__divider"></div>
      {% endif %}
      <div class="social-proof-stat" {{ block.shopify_attributes }}>
        <p class="social-proof-stat__number">{{ block.settings.number }}</p>
        <p class="social-proof-stat__label">{{ block.settings.label }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Social Proof Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
