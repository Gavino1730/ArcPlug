{% comment %}
  Price Comparison Section
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .price-comparison {
    text-align: center;
  }

  .price-comparison__title {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: rgba(var(--color-foreground), 0.9);
  }

  .price-comparison__subtitle {
    text-align: center;
    font-size: 1.1rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0 0 1.8rem 0;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    margin: 0;
    align-items: stretch;
  }

  .comparison-card {
    background: rgb(var(--color-background));
    border-radius: 12px;
    padding: 1.2rem 1.2rem;
    border: 1px solid rgba(var(--color-foreground), 0.12);
    text-align: center;
    position: relative;
    transition: transform 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .comparison-card--featured {
    border-color: rgba(var(--color-foreground), 0.24);
    background: rgba(var(--color-foreground), 0.03);
  }

  .comparison-card:hover:not(.comparison-card--featured) {
    transform: translateY(-2px);
    border-color: rgba(var(--color-foreground), 0.2);
  }

  .comparison-card__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 0.35rem 0.9rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .comparison-card__brand {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0.5rem 0 1rem 0;
    color: rgba(var(--color-foreground), 0.9);
  }

  .comparison-card__price {
    font-size: 2.75rem;
    font-weight: 700;
    margin: 0.75rem 0;
    color: rgba(var(--color-foreground), 0.95);
    line-height: 1;
  }

  .comparison-card__price-label {
    font-size: 0.875rem;
    opacity: 0.75;
    margin-bottom: 0.9rem;
  }

  .comparison-card__features {
    list-style: none;
    padding: 0;
    margin: 0.8rem 0 0 0;
    text-align: left;
  }

  .comparison-card__features li {
    padding: 0.42rem 0;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    font-size: 0.95rem;
    color: rgba(var(--color-foreground), 0.78);
    line-height: 1.3;
  }

  .comparison-card__features li:last-child {
    border-bottom: none;
  }

  .comparison-card__features li::before {
    content: "✓";
    color: rgb(var(--color-button));
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .comparison-card__button {
    margin-top: auto;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .comparison-card__button .button {
    width: 100%;
  }

  @media screen and (max-width: 989px) {
    .comparison-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .comparison-card--featured {
      order: -1;
    }

    .price-comparison__title {
      font-size: 1.75rem;
    }
  }
{%- endstyle -%}

<div class="price-comparison color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="price-comparison__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="price-comparison__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="comparison-grid">
      {% for block in section.blocks %}
        <div class="comparison-card {% if block.settings.featured %}comparison-card--featured{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.badge != blank %}
            <div class="comparison-card__badge">{{ block.settings.badge }}</div>
          {% endif %}
          
          <h3 class="comparison-card__brand">{{ block.settings.brand_name }}</h3>
          <div class="comparison-card__price">{{ block.settings.price }}</div>
          <p class="comparison-card__price-label">{{ block.settings.price_label }}</p>
          
          {% if block.settings.features != blank %}
            <ul class="comparison-card__features">
              {% assign features_list = block.settings.features | split: '|' %}
              {% for feature in features_list %}
                <li>{{ feature }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            <div class="comparison-card__button">
              <a href="{{ block.settings.button_link }}" class="button button--primary">
                {{ block.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Price Comparison",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Pay More?"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Compare and see the difference"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name",
          "default": "Brand"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$499"
        },
        {
          "type": "text",
          "id": "price_label",
          "label": "Price Label",
          "default": "Starting price"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge Text"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Featured Card",
          "default": false
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (separate with |)",
          "default": "Premium materials|Water resistant|Lifetime warranty"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
