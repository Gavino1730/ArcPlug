{% comment %}
  High-Converting Hero Banner with Urgency & Social Proof
  Optimized for maximum sales conversions
{% endcomment %}

<div class="hero-banner-cta color-{{ section.settings.color_scheme }} gradient">
  <div class="hero-banner-cta__wrapper page-width">
    <div class="hero-banner-cta__content">
      {%- if section.settings.eyebrow != blank -%}
        <p class="hero-banner-cta__eyebrow">{{ section.settings.eyebrow }}</p>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner-cta__heading h0">{{ section.settings.heading }}</h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <div class="hero-banner-cta__subheading h2">{{ section.settings.subheading }}</div>
      {%- endif -%}

      {%- if section.settings.show_urgency_timer -%}
        <div class="hero-banner-cta__urgency">
          <div class="urgency-timer">
            <span class="urgency-timer__icon">üî•</span>
            <span class="urgency-timer__text">Limited Time Offer Ends In:</span>
            <div class="urgency-timer__countdown" data-countdown-target="{{ section.settings.countdown_end_time }}">
              <div class="countdown-item">
                <span class="countdown-value" data-hours>00</span>
                <span class="countdown-label">Hours</span>
              </div>
              <div class="countdown-separator">:</div>
              <div class="countdown-item">
                <span class="countdown-value" data-minutes>00</span>
                <span class="countdown-label">Minutes</span>
              </div>
              <div class="countdown-separator">:</div>
              <div class="countdown-item">
                <span class="countdown-value" data-seconds>00</span>
                <span class="countdown-label">Seconds</span>
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_social_proof -%}
        <div class="hero-banner-cta__social-proof">
          <div class="social-proof-stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
          <p class="social-proof-text">
            <strong>{{ section.settings.social_proof_text }}</strong>
          </p>
        </div>
      {%- endif -%}

      <div class="hero-banner-cta__buttons">
        {%- if section.settings.button_label_1 != blank -%}
          <a
            href="{{ section.settings.button_link_1 }}"
            class="button button--primary button--large"
          >
            {{ section.settings.button_label_1 }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.button_label_2 != blank -%}
          <a
            href="{{ section.settings.button_link_2 }}"
            class="button button--secondary button--large"
          >
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.show_guarantees -%}
        <div class="hero-banner-cta__guarantees">
          <div class="guarantee-item">
            <span class="guarantee-icon">‚úì</span>
            <span class="guarantee-text">Free Shipping $75+</span>
          </div>
          <div class="guarantee-item">
            <span class="guarantee-icon">‚úì</span>
            <span class="guarantee-text">7-Day Free Returns</span>
          </div>
          <div class="guarantee-item">
            <span class="guarantee-icon">‚úì</span>
            <span class="guarantee-text">Secure Checkout</span>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

