  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "default": "Price",
          "label": "Feature"
        },
        {
          "type": "text",
          "id": "our_value",
          "default": "$149.99",
          "label": "Your value",
          "info": "Use 'check' for ✓, 'x' for ✗, or enter custom text"
        },
        {
          "type": "text",
          "id": "competitor_value",
          "default": "$150+",
          "label": "Competitor value",
          "info": "Use 'check' for ✓, 'x' for ✗, or enter custom text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
