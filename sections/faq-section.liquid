{% comment %}
  FAQ Section - Objection Handling
  Addresses common questions and removes purchase barriers
{% endcomment %}

<div class="faq-section color-{{ section.settings.color_scheme }} gradient">
  <div class="faq-section__wrapper page-width">
    {%- if section.settings.heading != blank -%}
      <div class="faq-section__header">
        <h2 class="faq-section__heading h1">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="faq-section__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="faq-section__grid">
        {%- for block in section.blocks -%}
          <details class="faq-item" {{ block.shopify_attributes }}>
            <summary class="faq-item__question">
              <span class="faq-item__question-text">{{ block.settings.question }}</span>
              <span class="faq-item__icon">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 4V12M4 8H12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </span>
            </summary>
            <div class="faq-item__answer">
              {{ block.settings.answer }}
            </div>
          </details>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_cta -%}
      <div class="faq-section__cta">
        <p class="faq-section__cta-text">{{ section.settings.cta_heading }}</p>
        <a href="{{ section.settings.cta_link }}" class="button button--primary">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .faq-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .faq-section__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .faq-section__heading {
    margin-bottom: 16px;
  }

  .faq-section__subheading {
    font-size: 1.125rem;
    opacity: 0.85;
    max-width: 700px;
    margin: 0 auto;
  }

  .faq-section__grid {
    max-width: 900px;
    margin: 0 auto 48px;
  }

  .faq-item {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    padding: 24px 0;
    cursor: pointer;
  }

  .faq-item:first-child {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .faq-item__question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    font-weight: 600;
    font-size: 1.125rem;
    list-style: none;
    user-select: none;
  }

  .faq-item__question::-webkit-details-marker {
    display: none;
  }

  .faq-item__icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.06);
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .faq-item:hover .faq-item__icon {
    background: rgba(var(--color-foreground), 0.1);
  }

  .faq-item[open] .faq-item__icon {
    transform: rotate(45deg);
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }

  .faq-item__answer {
    padding-top: 16px;
    padding-right: 52px;
    line-height: 1.7;
    color: rgba(var(--color-foreground), 0.85);
    animation: fadeInDown 0.3s ease;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .faq-section__cta {
    text-align: center;
    padding-top: 32px;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .faq-section__cta-text {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  @media screen and (max-width: 749px) {
    .faq-section {
      padding: {{ section.settings.padding_top | divided_by: 1.5 }}px 0 {{ section.settings.padding_bottom | divided_by: 1.5 }}px;
    }

    .faq-section__header {
      margin-bottom: 32px;
    }

    .faq-item {
      padding: 20px 0;
    }

    .faq-item__question {
      font-size: 1rem;
    }

    .faq-item__answer {
      padding-right: 0;
      font-size: 0.9375rem;
    }
  }
</style>

{% schema %}
{
  "name": "FAQ Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Frequently Asked Questions",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "default": "Got questions? We've got answers.",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "default": true,
      "label": "Show call to action"
    },
    {
      "type": "text",
      "id": "cta_heading",
      "default": "Still have questions?",
      "label": "CTA heading"
    },
    {
      "type": "text",
      "id": "cta_text",
      "default": "Contact Us",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
